<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Preferences">

        <ListPreference
            app:defaultValue="us"
            app:entries="@array/country_entries"
            app:entryValues="@array/country_values"
            app:title="Country"
            app:key="country"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue=" "
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values"
            app:key="language"
            app:title="Language"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue=" "
            app:entries="@array/sortby_entries"
            app:entryValues="@array/sortby_values"
            app:key="sortBy"
            app:title="Sorting"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Searching">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="Search for keyword in title only" />

        <SwitchPreferenceCompat
            app:dependency="sync"
            app:key="attachment"
            app:summaryOff="attachment summary off"
            app:summaryOn="attachment summary on"
            app:title="attachment summary" />

    </PreferenceCategory>

</PreferenceScreen>
